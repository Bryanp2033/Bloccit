<div class="media">
        <%= render partial: 'votes/voter', locals: {post: post} %>
         <div class="media-body">
           <h4 class="media-heading">
             <%= link_to (markdown_to_html post.title), [post.topic, post] %>
           </h4>
           <small>
             <%= image_tag(post.user.avatar.tiny.url) if post.user.avatar? %>
             submitted <%= time_ago_in_words(post.created_at) %> ago by
             <%= post.user.name %><br>
             <%= post.comments.count %> Comments
           </small>
         </div>
       </div>
     <% end %>
   </div>
   <div class="col-md-4">
     <% if policy(Post.new).create? %>
      <%= link_to "New Post", new_topic_post_path(post.topic), class: 'btn btn-success' %>
     <% end %>

      <% if policy(post.topic).destroy? %>
       <%= link_to "Delete Topic", post.topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %> 
     <% end %>
   </div>

 </div>