<h1>Edit Summary</h1>

<div class="row">

	<!-- the form for creating a editing a  summary -->
	<div class="col-md-8">
		<%= form_for @summary do |f| %>
		<div class="form-group">
			<%= f.label :description %>
			<%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter summary description" %>
		</div>
		<%= f.submit "Save", class: 'btn btn-success' %>
		<% end %>
	</div>
</div>