<!-- if current user is present then this form will be visible to them -->
<% if current_user %>
	<h4> Add a comment </h4>

	<!-- form for creating a new comment -->
	<%= form_for [@post, Comment.new], remote: true do |f| %>
		<%= f.label :body %>
		<%= f.text_field :body %>
		<%= f.submit %>
	<% end %>
<% end %>
