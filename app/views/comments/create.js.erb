
# //if the comment is valid then this javascript code is enabled, which appends(moves the comment to the top)
# // and creates new space for the comment form, if the comments fails to be valid then it just creates new space for the comment form
<% if @comment.valid? %>
  $('.js-comments').append("<%= escape_javascript(render(@comment)) %>");
  $('.new-comment').html("<%= escape_javascript(render( partial: 'comments/form', locals: { post: @post, comment: @new_comment }) ) %>");
<% else %>
  $('.new-comment').html("<%= escape_javascript(render partial: 'comments/form', locals: { post: @post, comment: @comment }) %>");
<% end %>
