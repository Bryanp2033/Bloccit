<h1>Topics </h1>
<h3>
		<% if policy(Topic.new).create? %>
		  <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
    <% end %>
  </h3>


<div class="row">
	<div class="col-md-8">
		<% @topics.each do |topic| %>
		<div class="media">
			<div class="media-body">
				<div class="media-heading">
					<%= link_to topic.name, topic %>
				</h4>
				<small>
					<%= topic.description %>
				</small>
			</div>
		</div>
		<% end %>
	</div>
	
</div>