<h1>Topics</h1>

<div class="col-md-4">

<!-- if the policy allows it, it will let the user the option to create a new topic -->
</div>
<div class="row">
	<div class="col-md-8">
		<% @topics.each do |topic| %>
		<div class="media">
			<div class="media-body">
				<div class="media-heading">
					<%= link_to topic.name, topic %>
				</h4>
				<small>
					<%= topic.description %>
				</small>
			</div>
		</div>
		<% end %>
	</div>
</div>
</div>